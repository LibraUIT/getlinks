<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">All Categories</h1>
    </div>
</div>
<div class="row clients-page">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
              <%= link_to new_categorie_admin_blogs_path, class: 'btn btn-primary' do %>
                <i class="fa fa-folder-o" aria-hidden="true"></i> New category
              <% end %>
              <%= link_to admin_blogs_path, class: 'btn btn-warning' do %>
                <i class="fa fa-book" aria-hidden="true"></i> All blogs
              <% end %>
              <%= link_to new_admin_blog_path, class: 'btn btn-success' do %>
                <i class="fa fa-pencil" aria-hidden="true"></i> New blog
              <% end %>
              <hr style="width: 100%" />
              <% if flash[:notice] %>
                <div class="alert alert-success">
                  <%= flash[:notice] %>
                </div>
              <% end %>
              <table class="table table-bordered">
                  <thead>
                      <tr>
                          <th width="100">No.</th>
                          <th>Name</th>
                          <th>Status</th>
                          <th style="width: 120px" class="text-center">Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @categories.each_with_index do |categorie, index| %>
                      <tr data-id="<%= categorie.id %>">
                        <td><%= no_id(index) %></td>
                        <td><%= categorie.name %></td>
                        <td><%= status_name(categorie.status) %></td>
                        <td>
                          <%= link_to edit_categorie_admin_blogs_path(categorie), class: 'btn btn-primary' do %>
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                          <% end %>
                          <%= link_to destroy_categorie_admin_blogs_path(categorie), class: 'btn btn-danger', method: :delete, data: { confirm: 'Do you want delete it ?. Are you sure ?' }, 'data-severity' => 'danger', :remote => true do %>
                            <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                    <% if @categories.count.zero? %>
                      <tr><td colspan="4">No results</td></tr>
                    <% end %>
                  </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
