<div class="row">
    <div class="col-lg-12">
      <%= link_to "<< Back", admin_blogs_path %>
    </div>
    <div class="col-lg-12">
        <h1 class="page-header">Edit <%= @blog.title %></h1>
    </div>
</div>
<div class="row clients-page">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <%= form_for(@blog, method: :patch, :url => admin_blog_path, :html => { :role => 'form'}) do |f| %>
                  <% if @blog.errors.full_messages.present? %>
                    <ul class="list-message-error alert alert-danger">
                        <% @blog.errors.full_messages.each do |error_message| %>
                        <li><%= error_message %></li>
                        <% end %>
                    </ul>
                  <% end %>
                  <% if flash[:notice] %>
                    <div class="alert alert-success">
                      <%= flash[:notice] %>
                    </div>
                  <% end %>
                  <%= render "form", f: f %>
                  <div class="col-sm-12">
                      <div class="col-sm-6">
                        <button class="btn btn-primary" type="submit">Save changes</button>
                      </div>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= javascript_tag defer: 'defer' do -%>
  setTimeout(function(){
    var $mark = function (id) { return document.getElementById(id); };
    new Editor($mark("text-input"), $mark("preview"));
  }, 3000);
<% end -%>
