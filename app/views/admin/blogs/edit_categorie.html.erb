<div class="row">
    <div class="col-lg-12">
      <%= link_to "<< Back", categories_admin_blogs_path %>
    </div>
    <div class="col-lg-12">
        <h1 class="page-header">Edit Category</h1>
    </div>
</div>
<div class="row clients-page">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
              <%= form_for(@categorie, method: :patch, :url => update_categorie_admin_blogs_path(@categorie), :html => { :role => 'form'}) do |f| %>
                <% if @categorie.errors.full_messages.present? %>
                  <ul class="list-message-error alert alert-danger">
                      <% @categorie.errors.full_messages.each do |error_message| %>
                      <li><%= error_message %></li>
                      <% end %>
                  </ul>
                <% end %>
                <% if flash[:notice] %>
                  <div class="alert alert-success">
                    <%= flash[:notice] %>
                  </div>
                <% end %>
              <%= render "categorie_form", f: f %>
              <div class="col-sm-12">
                  <div class="col-sm-6">
                    <button class="btn btn-primary" type="submit">Submit</button>
                  </div>
              </div>
              <% end %>
            </div>
        </div>
    </div>
</div>
