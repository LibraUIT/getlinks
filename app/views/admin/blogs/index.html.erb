<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">All Blogs</h1>
    </div>
</div>
<div class="row clients-page">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
              <%= link_to new_categorie_admin_blogs_path, class: 'btn btn-primary' do %>
                <i class="fa fa-folder-o" aria-hidden="true"></i> New category
              <% end %>
              <%= link_to categories_admin_blogs_path, class: 'btn btn-warning' do %>
                <i class="fa fa-folder-open" aria-hidden="true"></i> All categories
              <% end %>
              <%= link_to new_admin_blog_path, class: 'btn btn-success' do %>
                <i class="fa fa-pencil" aria-hidden="true"></i> New blog
              <% end %>
              <% if flash[:notice] %>
                <div class="alert alert-success">
                  <%= flash[:notice] %>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</div>
