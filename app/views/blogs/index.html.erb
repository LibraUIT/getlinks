<div class="callout large primary">
  <div class="row column text-center">
    <h1>Our Blog</h1>
  </div>
</div>
<div class="row" id="content">
    <div class="medium-8 columns">
      <% @blogs.each do |blog| %>
        <div class="blog-post">
          <h3><%= blog.title %></h3>
          <%= image_tag blog.image, class: 'thumbnail', width: '100%' %>
          <p class="markdown"><%= blog.content %></p>
          <div class="callout">
            <ul class="menu simple">
              <li><a href="#">Author: <%= blog.user.email %></a></li>
              <!--<li><a href="#">Comments: 3</a></li>-->
            </ul>
          </div>
        </div>
      <% end %>
    </div>
    <div class="medium-3 columns" data-sticky-container>
      <div class="sticky" data-sticky data-anchor="content">
        <h4>Categories</h4>
        <ul>
          <% @categories.each do |categorie| %>
            <li>
              <%= link_to "#" do %>
                <%= categorie.name %>
              <% end %>
            </li>
          <% end %>
        </ul>

        <!--<h4>Authors</h4>
        <ul>
          <li><a href="#">Skyler</a></li>
          <li><a href="#">Jesse</a></li>
          <li><a href="#">Mike</a></li>
          <li><a href="#">Holly</a></li>
        </ul>-->
      </div>
    </div>
</div>
<div class="row column">
  <%= paginate @blogs, :theme => 'twitter-bootstrap-3', :pagination_class => ""  %>
</div>
