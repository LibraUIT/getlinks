<div class="row column">
  <p class="lead"><i class="fa fa-bar-chart" aria-hidden="true"></i> Real-time Statistics</p>
</div>

<div class="row small-up-1 medium-up-2 large-up-3">
  <table>
    <% @links.each do |link| %>
      <tr>
        <td width="50%"><%= link_to link[:url].truncate(70), link[:url], target: '_blank' %></td>
        <td width="50%"><%= link[:name] %></td>
      </tr>
    <% end %>
  </table>
</div>
