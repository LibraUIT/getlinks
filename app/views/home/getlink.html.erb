<div class="row">

  <div class="medium-7 large-6 columns">
    <h3><%= @origin[:name] %></h3>
    <p class="subheader">
      <h6>
        <i class="fa fa-external-link-square" aria-hidden="true"></i>
        <%= link_to @origin[:url].truncate(50), @origin[:url], target: '_blank' %>
      </h6>
      <h6>
        <% if @output[:quality][:hd] %>
          <i class="fa fa-check-circle" aria-hidden="true"></i>
        <% else %>
          <i class="fa fa-circle-thin" aria-hidden="true"></i>
        <% end %>
        1080p HD
      </h6>
      <h6>
        <% if @output[:quality][:hq] %>
          <i class="fa fa-check-circle" aria-hidden="true"></i>
        <% else %>
          <i class="fa fa-circle-thin" aria-hidden="true"></i>
        <% end %>
        720p HQ
      </h6>
      <h6>
        <% if @output[:quality][:med] %>
          <i class="fa fa-check-circle" aria-hidden="true"></i>
        <% else %>
          <i class="fa fa-circle-thin" aria-hidden="true"></i>
        <% end %>
        480p MED
      </h6>
      <h6>
        <% if @output[:quality][:sd] %>
          <i class="fa fa-check-circle" aria-hidden="true"></i>
        <% else %>
          <i class="fa fa-circle-thin" aria-hidden="true"></i>
        <% end %>
        240p SD
      </h6>
      <h6><i class="fa fa-check-square-o" aria-hidden="true"></i> Support all websites on JavHD Network</h6>
      <h6><i class="fa fa-check-square-o" aria-hidden="true"></i> Live Streaming Support</h6>
    </p>
    <%= link_to "#{preview_path}?video=#{@output[:video].first[:url]}", target: '_blank', class: 'button' do %>
      PREVIEW VIDEO
    <% end %>
    <h5>DOWNLOAD VIDEO</h5>
    <% @output[:video].each do |video| %>
      <%= link_to video[:url], class: 'button', target: '_blank' do %>
        <i class="fa fa-download" aria-hidden="true"></i> <%= video[:quality] %>
      <% end %>
    <% end %>
  </div>

  <div style="ver" class="show-for-large large-3 columns">
    <%= image_tag @origin[:thumb], 'alt' => 'LINKNHANH.INFO - Free get link JavHD', style: 'width: 270px, height: 250px' %>
  </div>

  <%= render "form" %>

</div>

<div class="row column">
  <hr>
</div>
